{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ES2019",
    "outDir": "bin",
    "sourceMap": true,

    "esModuleInterop": true,
    "moduleResolution": "node",
  },
  "include": ["src/**/*"],
  "lib": ["es2015"],
  "rules": {
    "semicolon": [true, "never"],
  },
}
